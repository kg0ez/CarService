@model CarService.Common.ModelDto.DetailDto

<section>
    <div class="main">
        <div class="main__image">
            <img class="main__img" src="~/img/details/@Model.Img" alt="img" />
        </div>
        <div class="main__text">
            <div>

            </div>
            <h1 class="main__title">@Model.Name</h1>
            <p class="main__decs"><span class="book__characteristics">Год изготовления:</span>  @Model.Year</p>
            <p class="main__decs"><span class="book__characteristics">Вес:</span>  @Model.Weight</p>
            <p class="main__decs"><span class="book__characteristics">Описание:</span>  @Model.Description</p>
            <p class="main__decs"><span class="book__characteristics">Цена:</span>  @Model.Cost.Price</p>
            <p class="main__decs"><span class="book__characteristics">Цена доставки:</span>  @Model.Cost.CostDelivery</p>
            <p class="main__decs"><span class="book__characteristics">Время доставки:</span>  @Model.Cost.TimeDelivery</p>

            <div class="main__buttoms">
                <form asp-route-id="@Model.Id" method="post" asp-action="BuyDetail" asp-controller="Home">
                    <input class="card__link button-len" type="submit" value="Купить сейчас" />
                </form>
                <form asp-controller="Home" asp-action="AddBusket" method="post" asp-route-id="@Model.Id">
                    <input class="card__link" type="submit" value="Добавить в корзину" />
                </form>
            </div>
        </div>

    </div>
</section>

